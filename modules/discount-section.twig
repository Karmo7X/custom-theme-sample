

<section class="discount_section "  section-id="{{ sectionId }}"  
{% if settings.enablebackground %}
  style=" background-image: url('{{ settings.discountImage}}'); background-size: cover; background-position: center; width:100%; height:300px;"
{% endif %}>
 <div class="container">
  <div class="row align-items-center">
    <div class="col-lg-6 col-md-6 col-sm-12"
    {% if settings.enablebackground %}
      style="padding: 20px;"
    {% endif %}
    >
      <h3 class='discount_section_title  mb-4'>
        {{ settings.title }}
      </h3>
      <p class="discount_section_desc fs-5  mb-5">
        {{ settings.description }}
      </p>
      <div class="mt-4">
       <a href="{{ settings.buttonUrl }}" class="discount_section_btn w-75 text-decoration-none ">
        {{ settings.buttonText }}
      </a> 
      </div>
      
    </div>
    {% if not settings.enablebackground %}
      <div class="col-lg-6 col-md-6 col-sm-12 mt-3">
        <img src="{{ settings.discountImage }}" alt="" class="img-fluid discount_section_img ">
      </div>
      {% endif %}
  </div>
 </div>
 

</section>


<style>

.discount_section {
  background-color: {{ settings.sectionColor }};
  padding: 10px 30px;
  height: 350px;
  position: relative;
  overflow: hidden; /* Ensures overlay and background are contained */
}

.discount_section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4); /* Adjust color and opacity for overlay */
  z-index: 1;
}

.discount_section .container {
  position: relative;
  z-index: 2; /* Ensures content appears above the overlay */
}

.discount_section_title {
  color: {{ settings.title_color }};
  font-size: 35px;
}

.discount_section_desc {
  color: {{ settings.description_color }};
}

.discount_section_btn {
  background: {{ settings.buttonColor }};
  color: #ffffff !important;
  padding: 10px 50px;
  border-radius: 18px;
  font-size: 14px;
}

.discount_section_img {
  animation: rotate 4s infinite;
  transition: 0.4s;
}


@keyframes rotate {
  0% {
    transform: rotate(0deg) ;
  
  }
  50% {
    transform:rotate(-37deg) scale(0.8);
  }
  100% {
    transform: rotate(0deg) ;
  }
}



{#  media query #}

@media (max-width:992px) {
  .discount_section{
    height: 100% !important;
  }
  .discount_section_img{
    animation: none;
  }
}
</style>





